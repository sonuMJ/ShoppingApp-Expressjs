<div class="container">
    <div class="row mt-5 mb-5">
        <a class="btn btn-primary ml-auto" href="/admin/add-product">Add Product</a>
    </div>
    <table class="table">
    <thead>
        <tr>
        <th scope="col">No</th>
        <th scope="col">Name</th>
        <th scope="col">Price</th>
        <th scope="col">Category</th>
        <th scope="col">Image</th>
        <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
        <th scope="row">1</th>
        <td>{{this.name}}</td>
        <td>{{this.price}}</td>
        <td>{{this.category}}</td>
        <td><img src="/product-images/{{this._id}}.jpg" style="width: 50px;height: 50px;"/></td>
        <td>
            <a href="/admin/edit/{{this._id}}" class="btn btn-primary">Edit</a>
            <a href="/admin/delete/{{this._id}}" class="btn btn-danger" onclick="return confirm('Do you want to remove {{this.name}} ?')">Delete</a>
        </td>
        </tr>
        {{/each}}
    </tbody>
    </table>
</div>